# To use this file make sure .bashrc contains:
#   if [ -f ~/.bash_additions ]; then
#        . ~/.bash_additions
#   fi

# Aliases
alias l='ls -Clh'
alias ll='ls -Clah'
alias n='netstat -natp'
alias p='ps ax'
alias g='grep'
alias pg='ps ax | grep'
alias x='startxfce4'

# Send escape sequence as part of prompt (needed for dynamic window titles in screen)
PROMPT_COMMAND='echo -ne "\033k\033\0134"'

# Screen uses xterm to show 256 colors (see .screenrc). So we set this as default
TERM=xterm

# Add user local binaries to PATH
if [ -d "$HOME/.local/bin" ] ; then
  PATH="$PATH:$HOME/.local/bin"
fi

# Add user specific binaries to PATH
if [ -d "$HOME/usr/bin" ] ; then
  PATH="$HOME/usr/bin:$PATH"
fi
if [ -d "$HOME/.local/bin" ] ; then
  PATH="$HOME/.local/bin:$PATH"
fi

# Add Python modules to PYTHONPATH
python=("$HOME/usr/lib/python3.4/site-packages"
        "$HOME/usr/lib/python3.3/site-packages"
        "$HOME/usr/lib/python3.2/site-packages"
        "$HOME/usr/lib/python/site-packages"
        "$HOME/.local/lib/python3.4/site-packages"
        "$HOME/.local/lib/python3.3/site-packages"
        "$HOME/.local/lib/python3.2/site-packages"
        "$HOME/.local/lib/python/site-packages"
       )
for p in ${python[@]}; do
    if [ -d $p ] ; then
        export PYTHONPATH=$PYTHONPATH:$p
    fi
done

# Add binaries installed via gem to PATH
if [ -d "$HOME/.gem/ruby/2.1.0/bin" ] ; then
    PATH="$PATH:$HOME/.gem/ruby/2.1.0/bin"
fi
if [ -d "$HOME/.gem/ruby/2.2.0/bin" ] ; then
    PATH="$PATH:$HOME/.gem/ruby/2.2.0/bin"
fi

# Add binaries installed via cabal to PATH
if [ -d "$HOME/.cabal/bin" ] ; then
    PATH="$PATH:$HOME/.cabal/bin"
fi

# Include ./git-completion.bash
if [ -f ~/.git-completion.bash ]; then
   . ~/.git-completion.bash
fi

# Start xfce automatically if this is tty1
# (.bashrc must be called by .bash_profile!)

if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]]; then
  startxfce4
fi
